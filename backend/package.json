{
  "name": "kanban-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node start.js",
    "start:prod": "npm run build && node start.js",
    "db:check": "npm run build && node dist/scripts/dbCheck.js",
    "db:sync": "npm run build && node dist/scripts/dbSync.js",
